{
    "framework": "vite",
    "installCommand": "cd frontend && npm install && cd ../backend && npm install",
    "buildCommand": "cd frontend && npm run build",
    "outputDirectory": "frontend/dist",
    "functions": {
        "api/index.js": {
            "runtime": "@vercel/node@3",
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api"
        },
        {
            "source": "/(.*)",
            "destination": "/"
        }
    ]
}